<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"

        android:id="@+id/textLayout">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/search_50"
            android:id="@+id/ImageButtonRecentSsent"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kind of sport"
            android:id="@+id/textViewRecentSKindOfSport"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/ImageButtonRecentSsent"
            android:layout_toStartOf="@+id/ImageButtonRecentSsent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="place"
            android:id="@+id/textViewRecentSplace"
            android:layout_below="@+id/textViewRecentSKindOfSport"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_toLeftOf="@+id/ImageButtonRecentSsent"
            android:layout_toStartOf="@+id/ImageButtonRecentSsent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/textViewRSearchesDate"
            android:layout_below="@+id/textViewRecentSplace"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_alignRight="@+id/textViewRecentSplace"
            android:layout_alignEnd="@+id/textViewRecentSplace" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/textViewRecentStime"
            android:textColor="#000000"
            android:layout_below="@+id/textViewRSearchesDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textViewRSearchesDate"
            android:layout_alignEnd="@+id/textViewRSearchesDate" />

    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="6dp"
        android:layout_below="@id/textLayout"
        android:background="@android:color/darker_gray"
         />




</RelativeLayout>